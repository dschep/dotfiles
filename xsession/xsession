#!/bin/bash

# use external monitors
if xrandr |grep -v LVDS1|grep ' connected' > /dev/null; then
    xrandr --output LVDS1 --off $( \
        xrandr | grep -v LVDS1 | \
        sed -rne 's/(\w+) connected .*/--output \1 --auto/p' | tr '\n' ' ' )
    sleep 1
fi

xsetroot -cursor_name  left_ptr

xscreensaver -nosplash &

eval $(ssh-agent)


keepassx &
owncloud &
nm-applet &



exec awesome
